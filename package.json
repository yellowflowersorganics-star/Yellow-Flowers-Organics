  "main": "index.html",
  "scripts": {
    "start": "live-server --port=8000 --no-browser",
    "dev": "live-server --port=8000",
    "format": "prettier --write \"**/*.{html,css,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{html,css,js,json,md}\"",
    "lint:html": "htmlhint \"**/*.html\"",
    "lint:css": "stylelint \"**/*.css\"",
    "lint:js": "eslint \"**/*.js\"",
    "lint": "npm run lint:html && npm run lint:css && npm run lint:js",
    "validate": "npm run format:check && npm run lint",
    "test": "echo \"No automated tests yet\" && exit 0",
