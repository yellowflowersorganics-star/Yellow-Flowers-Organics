  "bugs": {
    "url": "https://github.com/yellowflowersorganics-star/Yellow-Flowers-Organics/issues"
  },
  "homepage": "https://yellowflowersorganicfarm.com",
  "devDependencies": {
    "eslint": "^8.50.0",
    "htmlhint": "^1.1.4",
    "live-server": "^1.2.2",
    "prettier": "^3.0.3",
    "stylelint": "^15.10.3",
    "stylelint-config-standard": "^34.0.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
